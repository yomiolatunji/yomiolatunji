@page
@model YomiOlatunji.Areas.Admin.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main">
    <div class="section">
        <div class="container">
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Post.Id" />
                        <div class="form-group">
                            <label asp-for="Post.CategoryId" class="control-label"></label>
                            <select asp-for="Post.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.Title" class="control-label"></label>
                            <input asp-for="Post.Title" class="form-control" />
                            <span asp-validation-for="Post.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.Content" class="control-label"></label>
                            <input asp-for="Post.Content" class="form-control" />
                            <span asp-validation-for="Post.Content" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.Excerpt" class="control-label"></label>
                            <input asp-for="Post.Excerpt" class="form-control" />
                            <span asp-validation-for="Post.Excerpt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.Slug" class="control-label"></label>
                            <input asp-for="Post.Slug" class="form-control" />
                            <span asp-validation-for="Post.Slug" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.HeaderImage" class="control-label"></label>
                            <input asp-for="Post.HeaderImage" class="form-control" />
                            <span asp-validation-for="Post.HeaderImage" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Post.CanComment" /> @Html.DisplayNameFor(model => model.Post.CanComment)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Post.IsPublished" /> @Html.DisplayNameFor(model => model.Post.IsPublished)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Post.IsArchived" /> @Html.DisplayNameFor(model => model.Post.IsArchived)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.PublishDate" class="control-label"></label>
                            <input asp-for="Post.PublishDate" class="form-control" />
                            <span asp-validation-for="Post.PublishDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.AuthorizeTime" class="control-label"></label>
                            <input asp-for="Post.AuthorizeTime" class="form-control" />
                            <span asp-validation-for="Post.AuthorizeTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.AuthorizedBy" class="control-label"></label>
                            <input asp-for="Post.AuthorizedBy" class="form-control" />
                            <span asp-validation-for="Post.AuthorizedBy" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Post.IsAuthorized" /> @Html.DisplayNameFor(model => model.Post.IsAuthorized)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.CreateTime" class="control-label"></label>
                            <input asp-for="Post.CreateTime" class="form-control" />
                            <span asp-validation-for="Post.CreateTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.CreateBy" class="control-label"></label>
                            <input asp-for="Post.CreateBy" class="form-control" />
                            <span asp-validation-for="Post.CreateBy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.UpdateTime" class="control-label"></label>
                            <input asp-for="Post.UpdateTime" class="form-control" />
                            <span asp-validation-for="Post.UpdateTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Post.UpdateBy" class="control-label"></label>
                            <input asp-for="Post.UpdateBy" class="form-control" />
                            <span asp-validation-for="Post.UpdateBy" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Post.IsDeleted" /> @Html.DisplayNameFor(model => model.Post.IsDeleted)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

@page
@model YomiOlatunji.Areas.Admin.Pages.Subscriptions.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].Subscribed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].UnsubscribeDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].UnsubscribeReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].CreateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].CreateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].UpdateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].UpdateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscription[0].IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Subscription) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subscribed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnsubscribeDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnsubscribeReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

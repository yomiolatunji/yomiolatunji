@page
@model YomiOlatunji.Pages.Admin.Contact.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="main">
    <div class="section">
        <div class="container">
            <h1>Index</h1>

            <p>
                <a asp-page="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].Message)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].Read)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].DateRead)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].CreateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].CreateBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].UpdateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].UpdateBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactMessage[0].IsDeleted)
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.ContactMessage) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Read)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRead)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdateBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDeleted)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>